  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <%= render 'books/error', model: @book %>
        <%= form_for(@book) do |f| %>
        <label class="title">Titke</label>
        <%= f.text_field :title %>
        <label class="body">Opinion</label>
        <%= f.text_area :body %>
        <%= f.submit 'Update Book' %>
      <div class="menu">
         <%= link_to"Show",book_path(@book.id) %>
         "|"
         <%= link_to"Back",books_path %>
      </div>
      <% end %>
    </div>
    <div class="col-xs-3"></div>
  </div>


