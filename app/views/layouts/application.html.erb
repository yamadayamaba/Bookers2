<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
          <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" date-toggler="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expendent="false" aria-label="Toggle navigation">
          <span class="navbar-nav ml-auto"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user), class:"fas fa-home nav-link text-light" do %>
              <span>Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to users_path, class:"fas fa-users nav-link text-light" do %>
              <span>Users</span>
              <% end %>
            </li>
            <li>
              <%= link_to books_path, class:"fas fa-book-open nav-link text-light" do %>
              <span>Books</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt nav-link text-light" do %>
              <span>logout</span>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to root_path, class:"fas fa-home nav-link text-light" do %>
              <span>Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to home_about_path, class:"fas fa-link nav-link text-light" do %>
              <span>About</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path, class:"fas fa-user-plus nav-link text-light" do %>
              <span>sign up</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path, class:"fas fa-sign-in-alt nav-link text-light" do %>
              <span>login</span>
              <% end %>
            </li>
          <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <%= yield %>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>

  </body>
</html>
