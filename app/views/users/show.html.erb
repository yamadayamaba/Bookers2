<p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
           <%= render 'users/info', users: @users %>
           <%= render 'books/new', books: @books %>
        </div>


        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
        <table class="table">
           <thead>
              <tr>
                <th>Title</th>
                <th>Opinion</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= @books.each do |book| %>
                <tr>
                  <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format:'jpeg', fallback: "no_image.jpg" %> %></td>
                  <td><%= link_to"@book.title", book_path(@book.id) %></td>
                  <td><%= @book.body %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
       </div>
      </div>
     </div>