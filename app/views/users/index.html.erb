    <div class="container">
      <div class="row">
        <div class="col-md-3">
           <%= render 'users/info', users: @users %>
           <%= render 'books/new', books: @books %>
        </div>

        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
        <table class="table">
           <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
                  <td><%= user.name %></td>
                  <td><%= link_to"Show", user_path(user.id) %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
       </div>
      </div>
     </div>